<% layout("layouts/boilerplate")%>
<div class="row  mt-3">
    <div class="col-8 offset-2">
        <br/><br/>
    <h3>Create New Listing</h3>
    <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3"> 
            <label for="title" class="form-lable">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required/>
            <div class="valid-feedback">Title Looks good! </div>
            <div class="invalid-feedback">Please enter vaild title.</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter short description.</div>
        </div>
         <div class="mb-3">
            <label for="image" class="form-lable">Upload Listing Image</label>
            <input name="listing[image]"type="file" class="form-control"   required/>
         </div>
        <select class="form-select form-select-md" name="listing[category]" aria-label="Small select example">
           <option selected>Select Category</option>
           <option value="Beach">Beach</option>
           <option value="Trending">Trending</option>
           <option value="Iconic Cities">Iconic Cities</option>
           <option value="Mountains">Mountains</option>
           <option value="Amazing Pools">Amazing Pools</option>
           <option value="Camping">Camping</option>
           <option value="Farms">Farms</option>
           <option value="Arctic">Arctic</option>
           <option value="Dome">Dome</option>
           <option value="Rooms">Rooms</option>
           <option value="Boats">Boats</option>
        </select>
        <br>
     <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label> 
            <!-- type="number" -->
          <input name="listing[price]" placeholder="1200"  class="form-control" required/>
          <div class="invalid-feedback">Price should be vaild.</div>
        </div>
        <div class="mb-3 col-md-8">
           <label for="country" class="form-lable">Country</label>
           <input name="listing[country]" placeholder="India" type="text" class="form-control" required/>
           <div class="invalid-feedback">Country should be vaild.</div>
        </div>
       </div> 
        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control" required/>
            <div class="invalid-feedback">Location should be vaild.</div>
        </div>
        <button class="btn btn-dark add-btn  mt-3">Add</button>
        <br/><br/>
    </form>
    </div>
</div>